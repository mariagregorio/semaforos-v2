    "htmlnano": "^0.2.7",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "posthtml": "^0.13.4",
    "posthtml-cli": "^0.8.0",
    "posthtml-modules": "^0.6.2",
